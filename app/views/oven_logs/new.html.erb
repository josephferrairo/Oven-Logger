<br  />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a New Oven Log Entry</h1>
  <br  />
  <%= simple_form_for @oven_log, url: oven_logs_path do |f| %>

  <table class="table">
    <td><%= f.input :customer%></td>
    <td><%= f.input :work_order, label: 'Work Order'%></td>
    <td><%= f.input :purchase_order, label: 'Purchase Order'%></td>
    <td><%= f.input :operator, label: 'Operator'                                               %></td>
  </table>

  <table class="table">
    <td><%= f.input :stress_in_date, :include_blank => true, as: :date_picker %></td>
    <td><%= f.input :stress_in_time, :include_blank => true, label:' Stress in', as: :time_picker               %></td>
    <td><%= f.input :stress_out_date, :include_blank => true, label: 'Stress out Date', as: :date_picker          %></td>
    <td><%= f.input :stress_out_time, :include_blank => true, label: 'Stress out', as: :time_picker                 %></td>
    <td><%= f.input :stress_asset, :include_blank => true, label: 'Asset'               %></td>
  </table>
  <table>

  </table>

  <table class= "table">
    <td><%= f.input :her_in_date, :include_blank => true, label: 'HER in Date', as: :date_picker                 %></td>
    <td><%= f.input :her_in_time, :include_blank => true, label: 'HER in', as: :time_picker                       %></td>
    <td><%= f.input :her_out_date, :include_blank => true, label: 'HER out Date', as: :date_picker                %></td>
    <td><%= f.input :her_out_time, :include_blank => true, label: 'HER out ', as: :time_picker                    %></td>
    <td><%= f.input :her_asset, label: 'Asset'                                          %></td>

  </table>
  <table>

  <%= f.submit "Submit", class: 'btn btn-primary'                                            %>
    </table

    <% end %>
  </table>
</div>
